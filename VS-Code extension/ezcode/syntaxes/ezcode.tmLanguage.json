{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "EZCode",
	"scopeName": "source.ezcode",
	"fileTypes": [".ezcode"],
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#constants"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.ezcode",
					"match": "\\b(print|printRaw|write|writeRaw|group|object|image|label|font|move|scale|color|var|varRaw|textbox|multiLine|varInput|varSet|varEquals|add|list|listRaw|writeToFile|sound|playFile|button|buttonClick)\\b"
				},
				{
					"name": "keyword.control.loop.ezcode",
					"match": "\\b(loop|end|:|if|endIf)\\b"
				},
				{
					"name": "keyword.control.oneword.ezcode",
					"match": "\\b(consoleClear|await|endBuild)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.ezcode",
					"match": "(\\/\\/.*$)"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.language.ezcode",
					"match": "\\b(\\w+)\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "keyword.control.after.ezcode",
					"match": "\\b(~\\/|\\/|\\*|\\-|\\+|!|\\\\_|\\\\n|\\\\!|&gt;|&lt;|ReadFile|change|abs|rel|new|relative|absolute|AwaitKeyInput|KeyDown|KeyInput|ConsoleInput|Random|MousePosition|MouseClick|FromList|Key|Console|StickKey|await|AwaitKey|IntersectsWith|bold|italic|strikeout|underline|regular|FromTextBox|input|now)\\b"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.character.ezcode",
					"match": "(<|>|=|!)"
				},
				{
					"name": "constant.numeric.ezcode",
					"match": "\\b(\\d+)\\b"
				},
				{
					"name": "comment.line.hashtag.ezcode",
					"match": "(#.*$)"
				}
			]
		}
	}
}
